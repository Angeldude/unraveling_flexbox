<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= current_page.data.title %></title>

    <%= stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css" %>
    <%= stylesheet_link_tag "shared_styles" %>
    <% current_page.data.stylesheets.each do |stylesheet| %>
      <%= stylesheet_link_tag stylesheet %>
    <% end %>
    <% if current_page.data.fonts %>
      <% current_page.data.fonts.each do |font| %>
        <%= stylesheet_link_tag font %>
      <% end %>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>

  <% if current_page.data.javascripts %>
    <% current_page.data.javascripts.each do |script| %>
      <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js" %>
      <%= javascript_include_tag script %>
    <% end %>
  <% end %>
</html>
